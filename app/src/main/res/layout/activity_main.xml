<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1919"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnYellow"
        android:layout_width="135dp"
        android:layout_height="136dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#ffd166"
        android:fontFamily="@font/aldrich"
        android:text="Yellow"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCommand" />

    <Button
        android:id="@+id/btnGreen"
        android:layout_width="135dp"
        android:layout_height="136dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#2FDB72"
        android:fontFamily="@font/aldrich"
        android:text="Green"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="21sp"
        app:layout_constraintEnd_toStartOf="@+id/btnBlue"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRed" />

    <Button
        android:id="@+id/btnBlue"
        android:layout_width="135dp"
        android:layout_height="136dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#118ab2"
        android:fontFamily="@font/aldrich"
        android:text="Blue"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnYellow" />

    <Button
        android:id="@+id/btnRed"
        android:layout_width="135dp"
        android:layout_height="136dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#ef476f"
        android:fontFamily="@font/aldrich"
        android:text="Red"
        android:textAllCaps="true"
        android:textColor="#0D0C0C"
        android:textSize="21sp"
        app:layout_constraintEnd_toStartOf="@+id/btnYellow"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCommand" />

    <TextView
        android:id="@+id/txtCommand"
        android:layout_width="366dp"
        android:layout_height="54dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/aldrich"
        android:text="Ali asks..."
        android:textColor="#B8B8B8"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="61dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCommand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347"
        app:srcCompat="@drawable/uiBackBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>